<% content_for :title, "Todos" %>

<div class="min-h-screen bg-linear-to-br from-sky-50 via-yellow-50 to-emerald-50 px-6 py-10">
  <div class="max-w-4xl mx-auto">

    <!-- Flash notice -->
    <% if notice.present? %>
      <div class="mb-6 rounded-xl bg-emerald-100 border border-emerald-200
                  text-emerald-700 px-4 py-3 shadow-sm">
        <%= notice %>
      </div>
    <% end %>

    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-4xl font-bold text-sky-600">
        ‚òÄÔ∏è Todos
      </h1>

      <%= link_to "Ôºã New Todo",
        new_todo_path,
        class: "rounded-xl bg-gradient-to-r from-sky-400 to-emerald-400
                text-white font-semibold px-5 py-2
                hover:from-sky-500 hover:to-emerald-500
                transition shadow-md" %>
    </div>

    <!-- Todos list -->
    <div id="todos" class="space-y-6">
      <% @todos.each do |todo| %>
        <div class="space-y-2">
          <%= render todo %>
          <div class="flex items-center justify-between mt-6">
            <div>
              <%= link_to "‚Üê Back to Projects",
                todo.project,
                class: "text-emerald-600 hover:underline font-medium" %>
            </div>

            <div>
              <%= link_to "View details ‚Üí",
                todo_path(todo),
                class: "text-sky-500 hover:underline font-medium" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <% if @todos.empty? %>
      <div class="mt-16 text-center text-gray-400">
        üå¥ No todos yet ‚Äî enjoy the sunshine and add one!
      </div>
    <% end %>

  </div>
</div>